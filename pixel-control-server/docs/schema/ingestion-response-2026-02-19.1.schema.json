{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pixel-control.dev/schema/ingestion-response-2026-02-19.1.schema.json",
  "title": "Pixel Control plugin ingestion response",
  "oneOf": [
    {
      "$ref": "#/$defs/acceptedAckResponse"
    },
    {
      "$ref": "#/$defs/rejectedAckResponse"
    },
    {
      "$ref": "#/$defs/errorResponse"
    }
  ],
  "$defs": {
    "acceptedAck": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "disposition",
        "event_id",
        "idempotency_key",
        "dedupe_key",
        "received_at"
      ],
      "properties": {
        "status": {
          "const": "accepted"
        },
        "disposition": {
          "type": "string",
          "enum": [
            "processed",
            "duplicate"
          ]
        },
        "event_id": {
          "type": "string",
          "minLength": 1
        },
        "idempotency_key": {
          "type": "string",
          "pattern": "^pc-idem-[a-f0-9]{40}$"
        },
        "dedupe_key": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "received_at": {
          "type": "string",
          "format": "date-time"
        },
        "correlation_id": {
          "type": "string"
        }
      }
    },
    "rejectedAck": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "code",
        "message",
        "retryable",
        "retry_after_seconds"
      ],
      "properties": {
        "status": {
          "const": "rejected"
        },
        "code": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$"
        },
        "message": {
          "type": "string",
          "minLength": 1
        },
        "retryable": {
          "type": "boolean"
        },
        "retry_after_seconds": {
          "type": "integer",
          "minimum": 0
        },
        "correlation_id": {
          "type": "string"
        }
      }
    },
    "acceptedAckResponse": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ack"
      ],
      "properties": {
        "ack": {
          "$ref": "#/$defs/acceptedAck"
        }
      }
    },
    "rejectedAckResponse": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ack"
      ],
      "properties": {
        "ack": {
          "$ref": "#/$defs/rejectedAck"
        }
      }
    },
    "errorResponse": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "error"
      ],
      "properties": {
        "error": {
          "$ref": "../../../pixel-control-plugin/docs/schema/delivery-error-2026-02-19.1.schema.json"
        }
      }
    }
  }
}
