{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pixel-control.dev/schema/delivery-error-2026-02-20.1.schema.json",
  "title": "Pixel Control delivery error",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "code",
    "message",
    "retryable",
    "retry_after_seconds"
  ],
  "properties": {
    "code": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9_]+$"
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "retryable": {
      "type": "boolean"
    },
    "retry_after_seconds": {
      "type": "integer",
      "minimum": 0
    },
    "retry_after_ms": {
      "type": "integer",
      "minimum": 0
    }
  }
}
